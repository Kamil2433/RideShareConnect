@model RideShareFrontend.Models.ResetPasswordModel

@{
    ViewData["Title"] = "Reset Password - Set New Password";
}
<style>
    .password-container {
        max-width: 500px;
        margin: 100px auto;
        background: #ffffff;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0px 5px 20px rgba(0,0,0,0.1);
    }
    .password-container h2 {
        margin-bottom: 10px;
        font-weight: 600;
    }
    .password-container h4 {
        font-size: 14px;
        color: #777;
        margin-bottom: 20px;
    }
    .btn-primary {
        width: 100px;
        padding: 10px;
        font-size: 16px;
        border-radius: 6px;
    }
</style>

<div style="margin-top: 400px; margin-bottom: 400px;">
    <h2>Set New Password</h2>
    <h4>Email: @Model.Email</h4>

    <div asp-validation-summary="All" class="text-danger"></div>

    <form asp-action="ResetPassword" asp-route-returnUrl="/ResetPassword" method="post">
        <input asp-for="Email" type="hidden" />
        <div class="form-group">
            <label asp-for="Password">New Password</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword">Confirm Password</label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Reset Password</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}