@model RideShareFrontend.Models.SendOtpModel

@{
    ViewData["Title"] = "Reset Password - Enter Email";
}
<style>
    .reset-container {
        max-width: 500px;
        margin: 100px auto;
        background: #ffffff;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0px 5px 20px rgba(0,0,0,0.1);
    }
    .reset-container h2 {
        margin-bottom: 20px;
        font-weight: 600;
        color: #333;
    }
    .btn-primary {
        width: 100px;
        padding: 10px;
        font-size: 16px;
        border-radius: 6px;
    }
</style>

<div style="margin-top: 400px; margin-bottom: 400px;">
    <h2>Reset Password</h2>

    <div asp-validation-summary="All" class="text-danger"></div>

    <form asp-action="SendOtp" asp-route-returnUrl="/VerifyOtp" method="post">
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Send OTP</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}