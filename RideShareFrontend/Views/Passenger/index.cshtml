@{

    Layout = "~/Views/Shared/_PassengerLayout.cshtml";

    ViewBag.Title = "Dashboard";

}



<div class="content-header">

    <h1>Welcome to Your Dashboard</h1>

    <p>Manage your rides and profile from here</p>

</div>



<div class="dashboard-grid">

    <!-- Quick Stats Cards -->

    <div class="stats-card">

        <div class="card-icon">

            <i class="fas fa-route"></i>

        </div>

        <div class="card-content">

            <h3>Total Rides</h3>

            <p class="stat-number">24</p>

        </div>

    </div>



    <div class="stats-card">

        <div class="card-icon">

            <i class="fas fa-dollar-sign"></i>

        </div>

        <div class="card-content">

            <h3>Wallet Balance</h3>

            <p class="stat-number">$127.50</p>

        </div>

    </div>



    <div class="stats-card">

        <div class="card-icon">

            <i class="fas fa-star"></i>

        </div>

        <div class="card-content">

            <h3>Your Rating</h3>

            <p class="stat-number">4.8</p>

        </div>

    </div>



    <!-- Recent Activity Section -->

    <div class="activity-section">

        <h2>Recent Activity</h2>

        <div class="activity-list">

            <div class="activity-item">

                <div class="activity-icon">

                    <i class="fas fa-check"></i>

                </div>

                <div class="activity-details">

                    <h4>Ride Completed</h4>

                    <p>Trip to Downtown - $15.30</p>

                    <small>2 hours ago</small>

                </div>

            </div>

            <div class="activity-item">

                <div class="activity-icon">

                    <i class="fas fa-plus"></i>

                </div>

                <div class="activity-details">

                    <h4>Wallet Topped Up</h4>

                    <p>Added $50.00 to wallet</p>

                    <small>1 day ago</small>

                </div>

            </div>

            <div class="activity-item">

                <div class="activity-icon">

                    <i class="fas fa-car"></i>

                </div>

                <div class="activity-details">

                    <h4>Ride Booked</h4>

                    <p>Trip to Airport scheduled</p>

                    <small>3 days ago</small>

                </div>

            </div>

        </div>

    </div>



    <!-- Quick Actions Section -->

    <div class="quick-actions">

        <h2>Quick Actions</h2>

        <div class="action-buttons">

            <a href="/Passenger/BookRide" class="action-btn primary">

                <i class="fas fa-plus"></i>

                Book New Ride

            </a>

            <a href="/Passenger/Wallet" class="action-btn secondary">

                <i class="fas fa-wallet"></i>

                Add Money

            </a>

            <a href="/Passenger/History" class="action-btn tertiary">

                <i class="fas fa-history"></i>

                View History

            </a>

        </div>

    </div>



</div>

