@model List<RideShareFrontend.DTOs.RideBookingDto>

@{
    ViewBag.Title = "Driver Bookings";
    Layout = "~/Views/Shared/_DriverLayout.cshtml";

}

<h2 class="mb-4">Pending & Confirmed Ride Bookings</h2>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    crossorigin="anonymous"></script>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    crossorigin="anonymous">

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
else if (Model.Count == 0)
{
    <div class="alert alert-info">No bookings found.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Booking ID</th>
                    <th scope="col">Ride ID</th>
                    <th scope="col">Passenger ID</th>
                    <th scope="col">Seats</th>
                    <th scope="col">Amount (â‚¹)</th>
                    <th scope="col">Status</th>
                    <th scope="col">Pickup</th>
                    <th scope="col">Drop</th>
                    <th scope="col">Booked At</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model)
                {
                    <tr>
                        <td>@booking.BookingId</td>
                        <td>@booking.RideId</td>
                        <td>@booking.PassengerId</td>
                        <td>@booking.SeatsBooked</td>
                        <td>@booking.TotalAmount.ToString("0.00")</td>
                        <td>
                            @if (booking.BookingStatus == "Pending")
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                            else if (booking.BookingStatus == "Confirmed")
                            {
                                <span class="badge bg-success">Confirmed</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@booking.BookingStatus</span>
                            }
                        </td>
                        <td>@booking.PickupPoint</td>
                        <td>@booking.DropPoint</td>
                        <td>@booking.BookingTime.ToString("g")</td>
                        <td>
                            @if (booking.BookingStatus == "pending")
                            {
                                <button class="btn btn-sm btn-success confirm-btn" data-booking-id="@booking.BookingId">
                                    <i class="fas fa-check"></i> Confirm
                                </button>
                                <button class="btn btn-sm btn-danger reject-btn" data-booking-id="@booking.BookingId">
                                    <i class="fas fa-times"></i> Reject
                                </button>
                            }
                            else
                            {
                                <span class="text-muted">No actions</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>



<script>
    $(document).ready(function () {
        // Confirm booking
        $('.confirm-btn').click(function () {
            const bookingId = $(this).data('booking-id');
            updateBookingStatus(bookingId, 'Confirmed');
        });

        // Reject booking
        $('.reject-btn').click(function () {
            const bookingId = $(this).data('booking-id');
            updateBookingStatus(bookingId, 'Rejected');
        });

        function updateBookingStatus(bookingId, status) {
            if (confirm(`Are you sure you want to ${status.toLowerCase()} this booking?`)) {
                $.ajax({
                    url: `/api/ridebooking/${bookingId}/status`,
                    type: 'PUT',
                    contentType: 'application/json',
                    data: JSON.stringify({ status: status }),
                    success: function (response) {
                        location.reload();
                    },
                    error: function (xhr) {
                        alert('Error updating booking status: ' + xhr.responseJSON?.message || 'Unknown error');
                    }
                });
            }
        }
    });
</script>
}