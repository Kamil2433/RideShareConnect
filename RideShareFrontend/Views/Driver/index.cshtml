@{
    Layout = "~/Views/Shared/_DriverLayout.cshtml";
    ViewBag.Title = "Dashboard";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Driver/Driver.css" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f0f2f5;
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: #2c3e50;
        }

        p {
            text-align: center;
            font-size: 16px;
            color: #555;
        }

        .vehicle-form {
            max-width: 600px;
            background: #fff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin: 40px auto;
        }

        .vehicle-form h2 {
            text-align: center;
            color: #007bff;
            margin-bottom: 25px;
        }

        .vehicle-form .form-group {
            margin-bottom: 20px;
        }

        .vehicle-form label {
            font-weight: 600;
            margin-bottom: 5px;
            display: block;
            color: #333;
        }

        .vehicle-form input[type="text"],
        .vehicle-form input[type="date"],
        .vehicle-form input[type="file"],
        .vehicle-form select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 8px;
            font-size: 15px;
        }

        .vehicle-form input[type="file"] {
            padding: 6px;
        }

        .vehicle-form button {
            width: 100%;
            padding: 12px;
            background-color: #007bff;
            border: none;
            color: #fff;
            font-size: 16px;
            border-radius: 8px;
            cursor: pointer;
        }

        .vehicle-form button:hover {
            background-color: #0056b3;
        }

        .vehicle-types {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-bottom: 20px;
        }

        .vehicle-types img {
            width: 70px;
            height: auto;
            border-radius: 10px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
        }

        
    </style>
}

<h1>Welcome to the Driver Dashboard</h1>
<p>This area is accessible only to users with the "Driver" role.</p>

<div class="vehicle-form">
    <h2>Vehicle Management</h2>
    <p>Register your vehicle with valid documents</p>

    @*<div class="vehicle-types">
        <img src="~/images/vehicles/sedan.png" alt="Sedan" />
        <img src="~/images/vehicles/suv.png" alt="SUV" />
        <img src="~/images/vehicles/hatchback.png" alt="Hatchback" />
    </div>*@

    <form asp-controller="Vehicle" asp-action="Register" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="vehicleType">Vehicle Type</label>
            <select class="form-control" name="VehicleType" id="vehicleType" required>
                <option value="">-- Select Type --</option>
                <option value="Sedan">Sedan</option>
                <option value="SUV">SUV</option>
                <option value="Hatchback">Hatchback</option>
            </select>
        </div>

        <div class="form-group">
            <label for="vehicleNumber">Vehicle Number</label>
            <input type="text" name="VehicleNumber" id="vehicleNumber" required />
        </div>

        <div class="form-group">
            <label for="insuranceNumber">Insurance Number</label>
            <input type="text" name="InsuranceNumber" id="insuranceNumber" required />
        </div>

        <div class="form-group">
            <label for="registrationExpiry">Registration Expiry Date</label>
            <input type="date" name="RegistrationExpiry" id="registrationExpiry" required />
        </div>

        <div class="form-group">
            <label for="rcDocument">Upload RC Document</label>
            <input type="file" name="RCDocument" id="rcDocument" accept=".pdf,.jpg,.jpeg,.png" required />
        </div>

        <div class="form-group">
            <label for="insuranceDocument">Upload Insurance Document</label>
            <input type="file" name="InsuranceDocument" id="insuranceDocument" accept=".pdf,.jpg,.jpeg,.png" required />
        </div>

        <button type="submit">Submit</button>
    </form>
</div>
